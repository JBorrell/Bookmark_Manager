<h1> Links </h1>

<%= @message %>

<ul id="links">
  <% @links.each do |link| %>
  <li>
    Title: <%= link.title %><br>
    URL: <a href="<%= link.url %>"><%= link.url %></a><br>
    tags: <%= link.tags.map(&:name).join(", ") %><br><br>
  </li>
  <% end %>
</ul>

<form action='/links/new' method='get'>
  <input type='submit' value='Add link'>
</form>
